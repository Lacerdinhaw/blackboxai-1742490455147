<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.ChurrasquinhoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        
        <!-- Widget styles -->
        <item name="materialCardViewStyle">@style/Widget.ChurrasquinhoApp.CardView</item>
        <item name="textInputStyle">@style/Widget.ChurrasquinhoApp.TextInputLayout</item>
        <item name="materialButtonStyle">@style/Widget.ChurrasquinhoApp.Button</item>
    </style>

    <!-- Card style -->
    <style name="Widget.ChurrasquinhoApp.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:layout_marginVertical">4dp</item>
    </style>

    <!-- Text Input style -->
    <style name="Widget.ChurrasquinhoApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="errorIconTint">@color/error</item>
        <item name="errorTextColor">@color/error</item>
        <item name="boxStrokeErrorColor">@color/error</item>
    </style>

    <!-- Button style -->
    <style name="Widget.ChurrasquinhoApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Outlined Button style -->
    <style name="Widget.ChurrasquinhoApp.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Text Button style -->
    <style name="Widget.ChurrasquinhoApp.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <!-- FAB style -->
    <style name="Widget.ChurrasquinhoApp.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/white</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <!-- Dialog style -->
    <style name="ThemeOverlay.ChurrasquinhoApp.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/Widget.ChurrasquinhoApp.Button.TextButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.ChurrasquinhoApp.Button.TextButton</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TextAppearance.ChurrasquinhoApp.DialogTitle</item>
    </style>

    <!-- Dialog Title Text style -->
    <style name="TextAppearance.ChurrasquinhoApp.DialogTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>